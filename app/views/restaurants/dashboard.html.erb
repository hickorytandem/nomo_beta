<div class="dashboard">
  <div class="dashboard-sidenav">
    <%# Logo + Hambuger %>
    <div class="sidebar-item justify-content-between d-flex mt-2">
      <%= image_tag 'nomo-logo-black.svg', id: "nomo-b-logo"%>
      <%= image_tag 'bars.svg'%>
    </div>
    <%# Shop name %>
    <div class="shop-name mt-4" style="font-weight: 600;">
      <hr class="sidenav-divider">
      <%= @shop_name %>
      <hr class="sidenav-divider">
    </div>
    <%# Sidenav Menu %>
    <ul>
      <%# Home %>
      <%= link_to dashboard_path do %>
        <li class="sidenav-item d-flex">
          <%= image_tag 'home-outline.svg', id: "nomo-b-logo", class: "mr-2"%>
          <span class="menu-title">Home</span>
        </li>
      <% end %>
      <%# Ingredients %>
      <%= link_to my_ingredients_path do %>
        <li class="sidenav-item d-flex">
          <%= image_tag 'Tree.svg', id: "nomo-b-logo", class: "mr-2"%>
          <span class="menu-title">Ingredients</span>
        </li>
      <% end %>
      <%= link_to my_orders_path do %>
