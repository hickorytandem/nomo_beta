          <%= image_tag 'icon_cart.svg', id: "nomo-b-logo", class: "mr-2"%>
          <span class="menu-title">Orders</span>
        </li>
      <% end %>
      <%= link_to shop_settings_path do %>
        <li class="sidenav-item d-flex">
          <%= image_tag 'Gear.svg', id: "nomo-b-logo", class: "mr-2"%>
          <span class="menu-title">Shop settings</span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="dashboard-content-container">
