<div class="row">
  <div class="col-5" id="ingredient-fix">
    <div><% @ingredient.photo %></div>
    <div class="qty-order">
      <div class="row">
        <div class="col-6 quantity">
          <p class="ingredient-qty">QTY : </p>
          <p class="ingredient-qty"><%= @ingredient.weight%> kg</p>
        </div>
        <div class="col-6 order">
          <%#= link_to my_cart_path do  %>
            <p class="ingredient-order">Add to cart</p>
            <p class="ingredient-order">$ <%= @ingredient.unit_price * @ingredient.stock_amount %></p>
          <%# end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-7 section-one">
    <div class="ingredient-info">
      <p class="resto-name"><%= @ingredient.seller.restaurant.name %></p>
      <h1 class="ingredient-header"><%= @ingredient.name %></h1>
      <div class="ingredients-badges">
        <span class="badge-round-yellow"><%= @ingredient.seller.restaurant.category.upcase %></span>
      </div>
      <p><strong>Expiry date: </strong><%= @ingredient.expiry_date %></p>
      <p class="ingredient-description"><%= @ingredient.description %></p>
      <div class="promo-cards">
        <%= render 'shared/card-green' %>
        <%= render 'shared/card-d-green' %>
      </div>
    </div>
    <div class="restaurant-info">
      <div class="left">
        <p class="pickup-detail">Pickup detail</p>
        <p class="detail-item"><strong>Opening hours: </strong><%= @ingredient.seller.restaurant.opening_hours %> - <%= @ingredient.seller.restaurant.closing_hours %></p>
        <p class="detail-item"><strong>Store location: </strong><%= @ingredient.seller.address %></p>
      </div>
      <div class="right">
        <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @marker.to_json %>"
         data-mapbox-api-key="<%= ENV['pk.eyJ1IjoiYW5uYW5uayIsImEiOiJja3E3d2VieDMwMThlMndsYmQ5NjNoYmpvIn0.AT2V8ebEY0qe6GbIzMkdsw'] %>"></div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-5"></div>
  <div class="col-7">
    <div class="section-two">
      <h1 class="ingredient-header">Matching recipe</h1>
    </div>
    <div class="section-three">
      <h1 class="ingredient-header">Often pair with...</h1>
    </div>
    <div class="section-four">
      <h1 class="ingredient-header">Other products in this store</h1>
    </div>
  </div>
</div>
