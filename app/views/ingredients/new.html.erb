<div class="dashboard">
  <%= render 'shared/dashboard_sidenav' %>
  <div class="dashboard-content-container">
    <% content_for :navbar, 'dashboard' %>
    <%# Content Navbar %>
    <div class="dashboard-topnav">
      <div class="top-nav">
        <%# Search %>
        <div class="input-group">
          <%= image_tag "search.svg", class: "input-group-text" %>
          <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1">
        </div>
        <div class="topnav-actions">
          <%= image_tag "noti.svg", class: "mr-3"%>
          <%# <%= render 'shared/dashboard_topnav' %>
          <%= image_tag "avatar-dashboard.svg"%>
        </div>
      </div>
    </div>
    <hr class="#">
    <%# End Topnav %>
    <div class="dashboard-content">
      <div class="content-container">
        <%# Page header %>
        <div class="dashboard-page-header d-flex justify-content-between">
          <h1>New ingredient</h1>
          <div class="topnav-actions">
            <%# <%= link_to 'Create', new_ingredient_path, class: "btn dashboard-button" %>
          </div>
        </div>
        <%# Form container %>
        <div class="dashboard-form-container">
          <%# Left panel %>
          <div class="dashboard-form-container-left">
            <div class="form-box">
              <h4 class="mb-4">Basic info</h4>
              <%= simple_form_for(@ingredient) do |f| %>
                <%= f.input :name, label: 'Ingredient name', placeholder: 'e.g. Apple, Banana,etc.', required: true  %>
                <%= f.input :description, placeholder: 'Tell us more about your ingredient...' %>
              </div>
              <div class="form-box">
                <h4>Expiry Date<span style="color:red;">*</span></h4>
                <%= f.input :expiry_date, as: :date, html5: true, label: false%>
              </div>
              <div class="form-box">
                <h4>Photo<span style="color:red;">*</span></h4>
                <%= f.input :photo, as: :file, label: false %>
              </div>
            </div>
            <%# Right panel %>
            <div class="dashboard-form-container-right">
              <div class="form-box">
                <h4>Pricing<span style="color:red;">*</span></h4>
                <%= f.input :unit_price,  as: :numeric, label: 'Unit price ($)', placeholder: '$', required: true %>
                <%= f.input :discount_rate, as: :numeric, label: 'Discount rate',placeholder: '%' %>
              </div>
              <div class="form-box">
                <h4>Inventory<span style="color:red;">*</span></h4>
                <%= f.input :stock_amount,  as: :numeric, label: 'Stock unit', placeholder: 'e.g. ', required: true %>
                <%= f.input :discount_rate, as: :numeric, label: 'Discount rate', placeholder: '%' %>
              </div>
            </div>
          <% end %>
          <%# End of form%>
        </div>
        <%# Place your content below %>
      </div>
    </div>
    <%# Background End %>
  </div>
</div>
