<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#= image_tag @order.ingredient.photo, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.status %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%#= @order.ingredient.name %> </li>
        <li><strong>TOTAL</strong> <%= @order_total_price %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
