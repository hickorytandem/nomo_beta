<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'Nomo_logo.png', width:"88px" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "For business", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to my_cart_path, class: "cart_btn" do %>
            <%= image_tag "icon_cart.svg" %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag "nomo_default_avatar.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <div class="user-name">
                <p class="username"><%= current_user.name %></p>
                <p class="email"><%= current_user.email %></p>
              </div>
              <%= link_to "My orders", orders_path, class: "dropdown-item" %>
              <%= link_to "My wishlist", "#", class: "dropdown-item" %>
              <%= link_to "Account settings", "#", class: "dropdown-item" %>
              <%= link_to "Help", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          <% else %>
            <%= image_tag "nomo_default_avatar.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log in", user_session_path, class: "dropdown-item" %>
              <%= link_to "Help", "#",class: "dropdown-item" %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
