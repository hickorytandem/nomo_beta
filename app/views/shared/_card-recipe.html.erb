        <div class="card-recipe-text">
          <div class="text-head">
            <%= image_tag "Review-star.svg", alt: "review-star", width: "24px" %>
            <p><%= recipe_hash[:review] %></p>
          </div>
          <div class="text-body">
            <h2><%= recipe_hash[:name] %></h2>
          </div>
